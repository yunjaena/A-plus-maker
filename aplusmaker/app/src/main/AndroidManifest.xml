<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.koreatech.a_plus_maker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <uses-sdk
        android:maxSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:name=".APlusMakerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".CheatActivity"></activity>
        <activity android:name=".FaqActivity" />
        <activity android:name=".StudyActivity" />
        <activity android:name=".ExplorerActivity" />
        <activity android:name=".AnswerActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MemoryActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.NoActionBar" />
    </application>
</manifest>