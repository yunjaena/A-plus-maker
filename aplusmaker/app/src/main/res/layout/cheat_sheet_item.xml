<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cheat_sheet_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        android:textColor="@color/violet"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        android:layout_weight="8"
        tools:text ="언어의 온도"/>

    <Button
        android:id="@+id/cheat_sheet_delete_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/radius_100dp_light_blue"
        android:text="삭제"/>

    <Button
        android:id="@+id/cheat_sheet_rewind_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/radius_100dp_violet"
        android:text="복습"/>

</LinearLayout>